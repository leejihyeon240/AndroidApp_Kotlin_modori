<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow_light"
    tools:context=".mainpage">

<!--    개인정보-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/profilebackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stdImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/stdName"
            android:layout_width="240dp"
            android:layout_marginTop="16dp"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:text="이름|학과" />

        <Button
            android:id="@+id/logout"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/logout"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textAlignment="textEnd"
            android:textColor="#535050"
            android:textSize="10sp" />
    </LinearLayout>

<!--    viewpager-->
    <LinearLayout
        android:id="@+id/main_back"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.4"
        android:background="@drawable/lvzero"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/main_text"
            android:layout_width="130dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="160dp"
            android:layout_height="90dp"/>

<!--        <me.relex.circleindicator.CircleIndicator-->
<!--            android:id="@+id/indicator"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="30dp"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            app:ci_drawable="@drawable/swipe_radius"-->
<!--            app:ci_height="5dp"-->
<!--            app:ci_margin="4dp"-->
<!--            app:ci_width="5dp"/>-->

<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:id="@+id/view"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginLeft="20dp"-->
<!--            android:layout_marginRight="20dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1.2">

<!--        버튼-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:id="@+id/siteBtn"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:background="@drawable/layoutbackground"
                android:paddingLeft="11dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/sitebtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사이트모음"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/calBtn"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:background="@drawable/layoutbackground"
                android:paddingLeft="11dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/calbtn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학점계산"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/playBtn"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:background="@drawable/layoutbackground"
                android:paddingLeft="11dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/playbtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="백색소음"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/telBtn"
                android:layout_width="160dp"
                android:layout_height="45dp"
                android:background="@drawable/layoutbackground"
                android:paddingLeft="11dp"
                android:layout_marginTop="15dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/telbtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학교전화부"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

<!--        게시판-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@drawable/board_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/brown">
                <SearchView
                    android:id="@+id/b_search"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layoutDirection="rtl"
                    style="@style/searchViewStyle"
                    android:layout_height="20dp"/>

            </LinearLayout>

            <ListView
                android:id="@+id/b_list"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:divider="#ffffff"/>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="unlabeled"
        android:background="@color/brown"
        app:itemIconTint="@drawable/bottom_selector_color"
        app:menu="@menu/bottom_menu"
        app:itemIconSize="@dimen/bottom_navigation_icon_size"/>

</LinearLayout>