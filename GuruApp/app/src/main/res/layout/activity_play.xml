<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow_light"
    tools:context=".play">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/webView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/galleryLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/rain"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:hoveredFocusedTranslationZ="2dp"
                app:maxImageSize="35dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/bonfire"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:maxImageSize="35dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/pine"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:maxImageSize="35dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/magic_wand"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:maxImageSize="35dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/pencil"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:maxImageSize="35dp"
                app:tint="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMusic6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/brown"
                android:src="@drawable/gyeongbokgung_palace"
                app:backgroundTint="@color/yellow_light"
                app:fabCustomSize="60dp"
                app:fabSize="normal"
                app:maxImageSize="35dp"
                app:tint="@color/white" />
        </LinearLayout>
    </HorizontalScrollView>

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

</androidx.constraintlayout.widget.ConstraintLayout>